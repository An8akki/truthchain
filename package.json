{
  "name": "truthchain",
  "version": "1.0.0",
  "description": "Blockchain-powered content verification system",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.js --network hardhat",
    "deploy:amoy": "hardhat run scripts/deploy.js --network polygonAmoy",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "verify": "hardhat verify --network",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:start": "cd frontend && npm start",
    "setup": "npm install && cd frontend && npm install && cd ..",
    "dev": "concurrently \"npm run frontend:dev\" \"echo 'Frontend running on http://localhost:3000'\""
  },
  "keywords": [
    "blockchain",
    "verification",
    "polygon",
    "ipfs",
    "web3"
  ],
  "author": "TruthChain Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.1.2",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "hardhat": "^2.19.0"
  }
}